#!/bin/sh
# The focused window swallows the one under.

# Ã‰valuer
eval "$(xdotool getactivewindow getwindowgeometry --shell)"

# Calculer
tX=$((X + WIDTH / 4))
tY=$((Y + HEIGHT + 50))

# Identifier
target=$(xdotool mousemove $tX $tY getmouselocation | awk '{print $4}' | cut -d':' -f2)

# Avaler
dwmswallow "$target" "$WINDOW"

exit 0
